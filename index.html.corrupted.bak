    .text-gradient {
      background: linear-gradient(135deg, #0f766e 0%, #06b6d4 100%);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .perspective-1000 {
      perspective: 1000px;
