    rel="stylesheet">
  <link href="./assets/lib/aos/dist/aos.css" rel="stylesheet">
  <script src="./assets/lib/aos/dist/aos.js"></script>

  <script>
    window.onload = function () {
      AOS.init({
        duration: 800,
        once: true,
        offset: 100,
        easing: 'ease-out-cubic'
      });

      window.addEventListener('scroll', () => {
        const headerBg = document.getElementById('header-bg');
        if (headerBg) {
          if (window.scrollY > 20) {
            headerBg.classList.add('bg-white/90', 'shadow-md');
            headerBg.classList.remove('bg-white/70');
          } else {
            headerBg.classList.remove('bg-white/90', 'shadow-md');
            headerBg.classList.add('bg-white/70');
          }
        }
      });
    }

    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          fontFamily: {
            sans: ['"Plus Jakarta Sans"', 'sans-serif'],
            heading: ['"Outfit"', 'sans-serif'],
          },
          colors: {
            primary: "#0f766e",
            secondary: "#0d9488",
            accent: "#06b6d4",
            dark: "#0f172a",
          },
          animation: {
            'blob': 'blob 7s infinite',
            'float': 'float 6s ease-in-out infinite',
            'spin-slow': 'spin 12s linear infinite',
          },
          keyframes: {
            blob: {
              '0%': { transform: 'translate(0px, 0px) scale(1)' },
              '33%': { transform: 'translate(30px, -50px) scale(1.1)' },
              '66%': { transform: 'translate(-20px, 20px) scale(0.9)' },
              '100%': { transform: 'translate(0px, 0px) scale(1)' },
            },
            float: {
              '0%, 100%': { transform: 'translateY(0)' },
              '50%': { transform: 'translateY(-20px)' },
            },
            shimmer: {
              '100%': { transform: 'translateX(100%)' }
            }
          }
        }
      }
    }

    $(function () {
      $("#header").load("./header.html");
      $("#footer").load("./footer.html");
    });
  </script>

  <style>
    body {
      font-family: 'Plus Jakarta Sans', sans-serif;
